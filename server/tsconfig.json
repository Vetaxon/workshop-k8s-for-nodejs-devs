{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "module": "commonjs",
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "outDir": "build"
  },
  "include": [
    "src/**/*"
  ]
}
